{
  "extends": "@daotl/tsconfig/vue.json",
  "compilerOptions": {
    "outDir": "build/dist",
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "src/*"
      ],
      "@@/*": [
        "src/.fes/*"
      ]
    },
    "types": [
      "node",
      "jest",
      "element-plus/global",
      "unplugin-icons/types/vue"
    ]
  },
  "include": [
    "**/*.js",
    "**/*.ts",
    "**/*.vue",
    ".eslintrc.js",
    ".stylelintrc.js"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "src/.fes/*",
    "src/.fes-production/*"
  ]
}
