{
  "extends": "@daotl/tsconfig/vue.json",
  "compilerOptions": {
    "outDir": "build/dist",
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "@@/*": ["src/.fes/*", "src/.fes-production/*"],
    },
    "types": [
      "node",
      "jest",
      "element-plus/global",
    ]
  },
  "include": [
    "**/*.js",
    "**/*.ts",
    "**/*.vue",
    "**/*.tsx",
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "src/.fes",
    "src/.fes-production",
  ],
}
