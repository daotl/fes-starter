{
  "extends": "@daotl/tsconfig/vue.json",
  "compilerOptions": {
    "outDir": "build/dist",
    "baseUrl": ".",
    "paths": {
      // TODO: `.fes.js` > `alias` doesn't support TS for now
      // "~/*": ["src/*"],
      "@/*": ["src/*"],
      "@@/*": ["src/.fes/*"]
    }
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "test/**/*",
    "__test__/**/*",
    "typings/**/*",
    "config/**/*",
    ".eslintrc.js",
    ".stylelintrc.js",
    ".prettierrc.js"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "scripts",
    "src/.fes/*",
    "webpack",
    "jest"
  ]
}
